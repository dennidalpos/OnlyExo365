<UserControl x:Class="ExchangeAdmin.Presentation.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Dashboard" FontSize="20" FontWeight="SemiBold"/>

            <Button Grid.Column="2" Content="Refresh" Command="{Binding Dashboard.RefreshCommand}"
                    Style="{StaticResource PrimaryButton}"/>
        </Grid>

        <StackPanel Grid.Row="1" Margin="0,0,0,12"
                    Visibility="{Binding Dashboard.IsLoading, Converter={StaticResource BoolToVisibility}}">
            <ProgressBar Height="4" Minimum="0" Maximum="100"
                         Value="{Binding Dashboard.LoadingProgress, Mode=OneWay}"
                         Foreground="{StaticResource AccentBrush}"
                         Background="{StaticResource TertiaryBackgroundBrush}"/>
            <TextBlock Text="{Binding Dashboard.LoadingStatus}" HorizontalAlignment="Center" Margin="0,4,0,0"
                       Foreground="{StaticResource SecondaryTextBrush}"/>
        </StackPanel>

        <Border Grid.Row="2" Background="#3D2200" BorderBrush="{StaticResource WarningBrush}"
                BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,16"
                Visibility="{Binding Dashboard.HasWarnings, Converter={StaticResource BoolToVisibility}}">
            <StackPanel>
                <TextBlock Text="Warnings" FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}"/>
                <ItemsControl ItemsSource="{Binding Dashboard.Warnings}" Margin="0,8,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap"
                                       Foreground="{StaticResource WarningBrush}" Margin="0,2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Mailboxes" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="User Mailboxes"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Dashboard.UserMailboxCount}" FontWeight="SemiBold"
                               HorizontalAlignment="Right">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                <Setter Property="Foreground" Value="{StaticResource InfoBrush}"/>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Button Grid.Row="0" Grid.ColumnSpan="2" Command="{Binding NavigateToMailboxesCommand}"
                            Opacity="0" Cursor="Hand" Background="Transparent" BorderThickness="0"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Shared Mailboxes" Margin="0,8,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Dashboard.SharedMailboxCount}" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Margin="0,8,0,0" Foreground="{StaticResource InfoBrush}"/>
                    <Button Grid.Row="1" Grid.ColumnSpan="2" Command="{Binding NavigateToSharedMailboxesCommand}"
                            Opacity="0" Cursor="Hand" Background="Transparent" BorderThickness="0"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Room Mailboxes" Margin="0,8,0,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Dashboard.RoomMailboxCount}" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Margin="0,8,0,0" Foreground="{StaticResource InfoBrush}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Equipment Mailboxes" Margin="0,8,0,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Dashboard.EquipmentMailboxCount}" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Margin="0,8,0,0" Foreground="{StaticResource InfoBrush}"/>

                    <Separator Grid.Row="4" Grid.ColumnSpan="2" Margin="0,12,0,8"
                               Background="{StaticResource BorderBrush}"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Total" FontWeight="SemiBold"/>
                    <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding Dashboard.TotalMailboxCount}" FontWeight="Bold" FontSize="18"
                                   Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="*" Foreground="{StaticResource WarningBrush}"
                                   Visibility="{Binding Dashboard.IsApproximate, Converter={StaticResource BoolToVisibility}}"
                                   ToolTip="Approximate count"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Column="1" Header="Distribution Groups" Margin="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Distribution Groups"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Dashboard.DistributionGroupCount}" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Foreground="{StaticResource InfoBrush}"/>
                    <Button Grid.Row="0" Grid.ColumnSpan="2" Command="{Binding NavigateToDistributionListsCommand}"
                            Opacity="0" Cursor="Hand" Background="Transparent" BorderThickness="0"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Dynamic Groups" Margin="0,8,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Dashboard.DynamicDistributionGroupCount}" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Margin="0,8,0,0" Foreground="{StaticResource InfoBrush}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="M365 Groups" Margin="0,8,0,0"
                               Visibility="{Binding Dashboard.ShowUnifiedGroups, Converter={StaticResource BoolToVisibility}}"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Dashboard.UnifiedGroupCount}" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Margin="0,8,0,0" Foreground="{StaticResource InfoBrush}"
                               Visibility="{Binding Dashboard.ShowUnifiedGroups, Converter={StaticResource BoolToVisibility}}"/>

                    <Separator Grid.Row="3" Grid.ColumnSpan="2" Margin="0,12,0,8"
                               Background="{StaticResource BorderBrush}"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Total" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Dashboard.TotalGroupCount}" FontWeight="Bold" FontSize="18"
                               HorizontalAlignment="Right" Foreground="{StaticResource AccentBrush}"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- License counters with progress bars -->
        <StackPanel Grid.Row="4" Margin="0,16,0,0"
                    Visibility="{Binding Dashboard.HasLicenses, Converter={StaticResource BoolToVisibility}}">
            <TextBlock Text="Licenze Tenant" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <ItemsControl ItemsSource="{Binding Dashboard.Licenses}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource SecondaryBackgroundBrush}"
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                CornerRadius="4" Padding="12,8" Margin="0,0,0,6">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding SkuPartNumber, StringFormat=SKU: {0}}" FontSize="11"
                                                   Foreground="{StaticResource SecondaryTextBrush}"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" HorizontalAlignment="Right"
                                               Foreground="{StaticResource SecondaryTextBrush}">
                                        <Run Text="{Binding Assigned, Mode=OneWay}"/>
                                        <Run Text="/"/>
                                        <Run Text="{Binding Total, Mode=OneWay}"/>
                                    </TextBlock>
                                </Grid>
                                <ProgressBar Grid.Row="1" Minimum="0" Maximum="{Binding Total}"
                                             Value="{Binding Assigned, Mode=OneWay}"
                                             Height="6" Margin="0,6,0,4"
                                             Foreground="{StaticResource AccentBrush}"
                                             Background="{StaticResource TertiaryBackgroundBrush}"/>
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Foreground="{StaticResource SecondaryTextBrush}" FontSize="11">
                                        <Run Text="Assegnate: "/>
                                        <Run Text="{Binding Assigned, Mode=OneWay}" FontWeight="SemiBold" Foreground="{StaticResource InfoBrush}"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="1" HorizontalAlignment="Right"
                                               Foreground="{StaticResource SecondaryTextBrush}" FontSize="11">
                                        <Run Text="Disponibili: "/>
                                        <Run Text="{Binding Available, Mode=OneWay}" FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}"/>
                                    </TextBlock>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Admin users table -->
        <StackPanel Grid.Row="5" Margin="0,16,0,0"
                    Visibility="{Binding Dashboard.HasAdminUsers, Converter={StaticResource BoolToVisibility}}">
            <TextBlock Text="Utenti Admin" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <DataGrid ItemsSource="{Binding Dashboard.AdminUsers}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Background="{StaticResource SecondaryBackgroundBrush}"
                      Foreground="{StaticResource PrimaryTextBrush}"
                      RowBackground="{StaticResource SecondaryBackgroundBrush}"
                      AlternatingRowBackground="{StaticResource TertiaryBackgroundBrush}"
                      GridLinesVisibility="None"
                      BorderThickness="0"
                      HeadersVisibility="Column"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nome" Binding="{Binding DisplayName}" Width="*"/>
                    <DataGridTextColumn Header="UPN" Binding="{Binding UserPrincipalName}" Width="*"/>
                    <DataGridTextColumn Header="Ruolo" Binding="{Binding RoleName}" Width="Auto"/>
                </DataGrid.Columns>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource TertiaryBackgroundBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource TertiaryBackgroundBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>
        </StackPanel>

        <Grid Grid.Row="6" Margin="0,16,0,0">
            <Border Background="#3D0000" BorderBrush="{StaticResource ErrorBrush}"
                    BorderThickness="1" CornerRadius="4" Padding="12"
                    HorizontalAlignment="Center" VerticalAlignment="Top"
                    Visibility="{Binding Dashboard.HasError, Converter={StaticResource BoolToVisibility}}">
                <StackPanel>
                    <TextBlock Text="Error" FontWeight="SemiBold" Foreground="{StaticResource ErrorBrush}"/>
                    <TextBlock Text="{Binding Dashboard.ErrorMessage}" TextWrapping="Wrap" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
    </ScrollViewer>
</UserControl>
