<UserControl x:Class="ExchangeAdmin.Presentation.Views.MessageTraceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Message Trace" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,16"/>

        <Border Grid.Row="1" Background="{StaticResource SecondaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                CornerRadius="4" Padding="12" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Da" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <DatePicker Grid.Column="1" SelectedDate="{Binding MessageTrace.StartDate}" Margin="0,0,12,0"/>

                <TextBlock Grid.Column="2" Text="A" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <DatePicker Grid.Column="3" SelectedDate="{Binding MessageTrace.EndDate}" Margin="0,0,12,0"/>

                <TextBlock Grid.Column="4" Text="Mittente" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox Grid.Column="5" Text="{Binding MessageTrace.SenderAddress, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,12,0"/>

                <TextBlock Grid.Column="6" Text="Destinatario" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox Grid.Column="7" Text="{Binding MessageTrace.RecipientAddress, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,12,0"/>

                <Button Grid.Column="8" Content="Cerca" Command="{Binding MessageTrace.SearchCommand}"
                        Style="{StaticResource PrimaryButton}"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Filtri rapidi status:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <Button Content="All" Command="{Binding MessageTrace.SetStatusFilterCommand}" CommandParameter="All" Style="{StaticResource PrimaryButton}" Margin="0,0,6,0"/>
            <Button Content="Delivered" Command="{Binding MessageTrace.SetStatusFilterCommand}" CommandParameter="Delivered" Style="{StaticResource PrimaryButton}" Margin="0,0,6,0"/>
            <Button Content="Failed" Command="{Binding MessageTrace.SetStatusFilterCommand}" CommandParameter="Failed" Style="{StaticResource PrimaryButton}" Margin="0,0,6,0"/>
            <Button Content="Pending" Command="{Binding MessageTrace.SetStatusFilterCommand}" CommandParameter="Pending" Style="{StaticResource PrimaryButton}" Margin="0,0,12,0"/>
            <Button Content="Export CSV" Command="{Binding MessageTrace.ExportCsvCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,6,0"/>
            <Button Content="Dettaglio messaggio" Command="{Binding MessageTrace.LoadDetailsCommand}" Style="{StaticResource PrimaryButton}"/>
        </StackPanel>

        <Grid Grid.Row="3" Margin="0,0,0,8"
              Visibility="{Binding MessageTrace.IsLoading, Converter={StaticResource BoolToVisibility}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ProgressBar Grid.Row="0" Minimum="0" Maximum="100"
                         Value="{Binding MessageTrace.LoadingProgress, Mode=OneWay}"
                         Height="6"/>
            <TextBlock Grid.Row="1" Text="{Binding MessageTrace.LoadingStatus}"
                       HorizontalAlignment="Center" Margin="0,4,0,0"
                       Foreground="{StaticResource SecondaryTextBrush}"/>
        </Grid>

        <Border Grid.Row="4" Background="#3D0000" BorderBrush="{StaticResource ErrorBrush}"
                BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,8"
                Visibility="{Binding MessageTrace.HasError, Converter={StaticResource BoolToVisibility}}">
            <StackPanel>
                <TextBlock Text="Error" FontWeight="SemiBold" Foreground="{StaticResource ErrorBrush}"/>
                <TextBlock Text="{Binding MessageTrace.ErrorMessage}" TextWrapping="Wrap" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="5"
                  ItemsSource="{Binding MessageTrace.Messages}"
                  SelectedItem="{Binding MessageTrace.SelectedMessage, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Received" Binding="{Binding Received, StringFormat={}{0:dd/MM/yyyy HH:mm}}" Width="140"/>
                <DataGridTextColumn Header="Sender" Binding="{Binding SenderAddress}" Width="*"/>
                <DataGridTextColumn Header="Recipient" Binding="{Binding RecipientAddress}" Width="*"/>
                <DataGridTextColumn Header="Subject" Binding="{Binding Subject}" Width="1.5*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid Grid.Row="6"
                  ItemsSource="{Binding MessageTrace.SelectedMessageEvents}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="0,8,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat={}{0:dd/MM/yyyy HH:mm:ss}}" Width="150"/>
                <DataGridTextColumn Header="Event" Binding="{Binding Event}" Width="130"/>
                <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="120"/>
                <DataGridTextColumn Header="Detail" Binding="{Binding Detail}" Width="*"/>
                <DataGridTextColumn Header="Data" Binding="{Binding Data}" Width="1.4*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="7" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Previous" Command="{Binding MessageTrace.PreviousPageCommand}"
                    Style="{StaticResource PrimaryButton}"/>

            <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Run Text="Page "/>
                <Run Text="{Binding MessageTrace.CurrentPage, Mode=OneWay}"/>
            </TextBlock>

            <Button Grid.Column="2" Content="Next" Command="{Binding MessageTrace.NextPageCommand}"
                    Style="{StaticResource PrimaryButton}"/>
        </Grid>
    </Grid>
</UserControl>
